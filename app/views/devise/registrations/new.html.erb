<div class="jumbotron-custom text-center">
    <div class="panel container whitehalfheight">
        <div class = "devise-content">
          <div class = "panel-heading">
            <h2> <b> SIGN UP </b> </h2>
          </div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.label :email %> <br />
            <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address' %> <br/>

            <%= f.label :password %>
            <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
             <%= f.password_field :password, :placeholder => 'Password' %> <br />
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation' %> <br /> 
            <br />
            <%= f.submit "Create an account", :class=>'btn btn-primary'%> <br />

            <%= devise_error_messages! %>
        <% end %>

          <%= render "devise/shared/links" %> 
        </div>
  </div>
</div>